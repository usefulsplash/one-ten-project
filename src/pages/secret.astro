---
export const prerender = false;

import { PAGE_PASSWORD } from "../consts/consts.tsx";

const password = Astro.url.searchParams.get("password");
const authenticated = password == PAGE_PASSWORD;

if (!authenticated) return Astro.redirect("/404");
---

<html>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Secret</title>
	</head>
	<body>
		<h1>Shhh it's a secret</h1>
	</body>
</html>
